public class recursos {
    
    // Primer método: Retorna un mensaje fijo
    public String obtenerMensaje() {
        return "Programación Orientada a Objetos";
    }

    // Segundo método: Determina si el estudiante es mayor de edad
    public String verificarEdad(int edad) {
        if (edad >= 21) {
            return "Mayor de edad";
        } else {
            return "Menor de edad";
        }
    }

    // Tercer método: Multiplica dos números enteros
    public int multiplicar(int num1, int num2) {
        return num1 * num2;
    }

    // Cuarto método: Retorna una lista de números del 1 al X
    public int[] generarListaNumeros(int x) {
        int[] lista = new int[x];
        for (int i = 0; i < x; i++) {
            lista[i] = i + 1;
        }
        return lista;
    }
}
